<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TranslucentDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TranslucentDialog.Style</item>
    </style>

    <style name="TranslucentDialog.Style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LibRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_progress</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="RateDialog" parent="TranslucentDialog">
        <item name="colorSecondary">#DE421F</item>
        <item name="itemTextColor">#000000</item>
        <item name="colorAccent">@color/grey</item>
        <item name="colorPrimary">@color/gnt_white</item>
        <item name="hintTextColor">#777777</item>
    </style>
</resources>